{
  "name": "openGrok",
  "displayName": "OpenGrok",
  "description": "OpenGrok client for VSCode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "openGrok.search",
        "title": "OpenGrok: Search"
      }
    ],
    "configuration": {
      "title": "OpenGrok",
      "properties": {
        "openGrok.serverURL": {
          "type": "string",
          "markdownDescription": "Full URL of the OpenGrok server. This must include the leading `http://` or `https://`."
        },
        "openGrok.defaultProjectNames": {
          "type": "array",
          "description": "Default project(s) used for search queries.",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "views": {
      "openGrokResultsContainer":[
        {
          "id": "openGrokResults",
          "name": "Grok"
        }
      ]
    },
    "viewsContainers": {
      "panel": [
        {
          "id": "openGrokResultsContainer",
          "title": "Grok",
          "icon": "$(search)"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/node-fetch": "^2.6.12",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "node-fetch": "^2.7.0"
  }
}
